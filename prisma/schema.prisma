generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User{
  id String @id
  email String
  firstname String
  lastname String
  profilepicture String? 
  product Product[]
}

model Product{
  id String @id @default(uuid())
  name String
  price Int
  smalldescription String
  description Json
  images String[]
  productfile String
  category CategoryEnum

  createdAt DateTime @default(now())
  userId String?
  user User? @relation(fields: [userId], references: [id])
}


enum CategoryEnum {
  template
  uikit
  icon
}